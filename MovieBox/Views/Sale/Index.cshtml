@model IEnumerable<MovieBox.Models.Sale>

@{
    ViewBag.Title = "Sale";
}

<h2>Movies On Sale</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MovieName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MovieName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Sale_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Sale_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Sale_ID })
        </td>
    </tr>
}

</table>
